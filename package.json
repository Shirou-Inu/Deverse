{
  "name": "deverse",
  "private": true,
  "version": "0.0.0",
  "homepage": "https://Shirou-Inu.github.io/Deverse",
  "type": "module",
  "scripts": {
    "predeploy": "npm run build:all",
    "deploy": "gh-pages -d dist",
    "dev": "vite",
    "dev:projects": "tsc --project tsconfig.projects.json && npm run copy-html",
    "build": "tsc -b && vite build",
    "build:projects": "tsc --project tsconfig.projects.json && npm run copy-html",
    "build:all": "npm run build:projects && npm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "copy-html": "xcopy projects-src\\*.html public\\projects /S /Y"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "framer-motion": "^12.23.12",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.7.1",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}
